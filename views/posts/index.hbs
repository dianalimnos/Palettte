<header>
    <div class="row align-items-center">
      <div class="col justify-content-center text-center">
        <h4 class="tagline">create and share your own color palettes</h4>
        <a class="btn btn-outline-dark" href="/posts/new">Start Now</a>
      </div>
    </div>
</header>
<div class="row justify-content-center">
  <div class="col-12">
    {{#each posts}}
      <div class="card border-white post text-center">
        <div class="card-body">
          <div class="row justify-content-center">
              <style>
                .one-{{this.color1}} {
                  background-color: #{{this.color1}};
                }
              </style>
                <div class="color one-{{this.color1}}"></div>
              <style>
                .two-{{this.color2}} {
                  background-color: #{{this.color2}};
                }
              </style>
                <div class="color two-{{this.color2}}"></div>
              <style>
                .three-{{this.color3}} {
                  background-color: #{{this.color3}};
                }
              </style>
                <div class="color three-{{this.color3}}"></div>
              <style>
                .four-{{this.color4}} {
                  background-color: #{{this.color4}};
                }
              </style>
                <div class="color four-{{this.color4}}"></div>
          </div>
        </div>
        <label>{{this.title}}</label>
      </div>
    </div>
  {{/each}}
</div>

<div class="buttons">
  <div class="row justify-content-end">
    <div class="container">
      <a class="button" id="top" href="#"><img src="/img/Top.png" alt="Button to Top" width="25" height="30"></a>
      <a class="button" id="bottom" href="javascript: document.body.scrollIntoView(false);"><img src="/img/Bottom.png" alt="Button to Bottom" width="25" height="30"></a>
      <!-- <a class="button" id="create" href="/posts/new"><img src="/img/Create.png" alt="Create" width="90" height="90"></a> -->
    </div>
  </div>
</div>


