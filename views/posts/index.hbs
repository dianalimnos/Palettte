<div class = "text-center">
  <h4>create and share your own color palettes</h4>
  <a class="btn btn-outline-dark" href="/posts/new">+</a>
</div>

<div class="row">
  {{#each posts}}
    <div class="col-12">
      <div class="card post">
        <div class="card-header">
          {{this.title}}
        </div>

        <div class="card-body">
          <div class="row">
            <style>
              .one {
                height: 100px;
                width: 100px;
                background-color: #{{color1}};
              }
            </style>
            <div class="color one"></div>
            <style>
              .two {
                height: 100px;
                width: 100px;
                background-color: #{{color2}};
              }
            </style>
            <div class="color two"></div>
            <style>
              .three {
                height: 100px;
                width: 100px;
                background-color: #{{this.color3}};
              }
            </style>
            <div class="color three"></div>
            <style>
              .four {
                height: 100px;
                width: 100px;
                background-color: #{{color4}};
              }
            </style>
            <div class="color four"></div>
          </div>
          <div class="row">
            <p class="card-text">{{color1}}</p>
            <p class="card-text">{{color2}}</p>
            <p class="card-text">{{color3}}</p>
            <p class="card-text">{{color4}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

