<div class="row">
  <div class="col">
    <h1 class="post-title">Create</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <form method="POST" action="/posts">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" name="title" class="form-control" id="post-title" placeholder="">
      </div>

      <div class="colors">
        <label for="color-title">Hex Colors</label>
      </div>

      <div class="form-row">
        <div class="color 1"></div>
        <div class="color 2"></div>
        <div class="color 3"></div>
        <div class="color 4"></div>
      </div>

      <div class="form-row">
        <div class="form-group col-3">
          <input type="text" name="color1" class="form-control" id="post-color1" placeholder="#">
        </div>

        <div class="form-group col-3">
          <input type="text" name="color2" class="form-control" id="post-color2" placeholder="#">
        </div>

        <div class="form-group col-3">
          <input type="text" name="color3" class="form-control" id="post-color3" placeholder="#">
        </div>

        <div class="form-group col-3">
          <input type="text" name="color4" class="form-control" id="post-color4" placeholder="#">
        </div>
      </div>

      <div>
        <button type="submit" class="btn btn-dark">+</button>
      </div>
    </form>
  </div>
</div>
